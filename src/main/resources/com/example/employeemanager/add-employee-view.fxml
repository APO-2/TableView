<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.employeemanager.controller.AddEmployeeController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10">
        <Label text="Nombre:" />
        <TextField fx:id="nameEmployeeTF" />

        <Label text="Age:" />
        <TextField fx:id="ageEmployeeTF" />

        <Button text="Agregar" onAction="#onAddEmployee" />
        <Button text="Cerrar" onAction="#onClose" />
    </VBox>
</AnchorPane>
